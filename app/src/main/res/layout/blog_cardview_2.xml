<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_image"
                android:layout_width="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:cropToPadding="true"
                android:layout_height="250dp"
                android:background="@color/default_image_color">

            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_string_TextView"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:maxWidth="330dp"
                    android:fontFamily="sans-serif"
                    android:text="YOUR AD CREATIVE HAS A SHELF LIFE TOO."
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:lines="2">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/datetime_string"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@android:color/darker_gray"
                        android:text="Jan 3, 2020 | 6 Min Read"
                        ></TextView>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/writtenby"
                            android:layout_width="wrap_content"
                            android:layout_toLeftOf="@id/writter_name"
                            android:layout_height="wrap_content"
                            android:text="written by."
                            android:textColor="@android:color/darker_gray"
                            android:textSize="13sp">

                        </TextView>
                        <TextView
                            android:id="@+id/writter_name"
                            android:layout_marginLeft="5sp"
                            android:layout_marginRight="5dp"
                            android:layout_width="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="ajaymodi"
                            android:textSize="13sp"
                            android:textColor="@android:color/darker_gray"
                            android:layout_height="wrap_content"
                            ></TextView>

                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/blog_content_string"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="150dp"
                    android:layout_marginTop="18dp"
                    android:fontFamily="sans-serif"
                    android:text="The cards are drawn to the screen with a default elevation, which causes the system to draw a shadow underneath them. You can provide a custom elevation for a card with the card_view:cardElevation attribute. This will draw a more pronounced shadow with a larger elevation"
                    android:textSize="16sp">

                </TextView>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/like_IV"
                        android:layout_marginLeft="10dp"
                        android:layout_width="30dp"
                        android:scaleType="fitXY"
                        android:layout_height="30dp"
                        android:padding="2dp"
                        android:src="@drawable/outline_favorite_border_black_18dp"/>
                    <ImageView
                        android:id="@+id/comment_IV"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="2dp"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/outline_mode_comment_black_18dp" />

                    <ImageView
                        android:id="@+id/share_IV"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="2dp"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="40dp"
                        android:src="@drawable/outline_share_black_18dp" />

                    <ImageView
                        android:id="@+id/bookmark_IV"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="2dp"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="180dp"
                        android:src="@drawable/outline_bookmark_border_black_18dp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>