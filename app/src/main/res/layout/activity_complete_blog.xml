<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.CompleteBlog">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_TB_complete_blog"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:paddingRight="10dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/back_IV_complete_blog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/white_back_arrow"/>
<!--        <RelativeLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:gravity="right">-->
<!--            <ImageView-->
<!--                android:id="@+id/more_vertical_IV_complete_blog"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:src="@drawable/more_vertical"/>-->
<!--        </RelativeLayout>-->

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/title_string_TV_complete_blog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="22dp"
            android:padding="5dp"
            android:maxLines="2"
            android:layout_margin="10dp"/>

        <RelativeLayout
            android:layout_margin="10dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/writter_image_IV_complete_blog"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:background="@color/default_image_color" />

            <TextView
                android:id="@+id/writer_name_TV_complete_blog"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:layout_marginLeft="5dp"
                android:textSize="16dp"
                android:text="               "
                android:textColor="@android:color/black"
                android:gravity="center_vertical"
                android:layout_toRightOf="@id/writter_image_IV_complete_blog"/>
            <TextView
                android:id="@+id/datetime_TV_complete_blog"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@id/writer_name_TV_complete_blog"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/blog_main_image_IV_complete_blog"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:src="@color/default_image_color"/>

        <TextView
            android:id="@+id/content_TV_complete_blog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="2dp"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tags_string_TV_complete_blog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="2dp"
            android:background="@color/default_image_color"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>